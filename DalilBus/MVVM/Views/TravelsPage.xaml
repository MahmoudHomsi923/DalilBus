<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DalilBus.MVVM.Views.TravelsPage"
             Title="Travels الرحلات">

    <ContentPage.Resources>
        <x:String x:Key="leftlong">&#xf30a;</x:String>
        <x:String x:Key="rightlong">&#xf30b;</x:String>
        <x:String x:Key="edit">&#xf044;</x:String>
        <x:String x:Key="clock">&#xf017;</x:String>
        <x:String x:Key="bus">&#xf55e;</x:String>
        <x:String x:Key="info">&#xf05a;</x:String>
    </ContentPage.Resources>

    <Grid VerticalOptions="Fill" HorizontalOptions="Fill">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header: Start/Ziel -->
        <Grid 
            Grid.Row="0"
            ColumnDefinitions="*,Auto,*"
            HeightRequest="40"
            BackgroundColor="{StaticResource Primary}">
            <HorizontalStackLayout 
                Grid.Column="0" 
                Spacing="5" 
                HorizontalOptions="Center" 
                VerticalOptions="Center">
                <Label
                    x:Name="lblSelectedStartPlace"
                    Text="{Binding SelectedStartPlace.Name}"
                    FontSize="16"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout 
                Grid.Column="1" 
                Spacing="5" 
                HorizontalOptions="Center" 
                VerticalOptions="Center">
                <Label
                    x:Name="lblDirection"
                    FontFamily="FAS"
                    FontSize="20"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout 
                Grid.Column="2" 
                Spacing="5" 
                HorizontalOptions="Center" 
                VerticalOptions="Center">
                <Label
                    x:Name="lblSelectedDestinationPlace"
                    Text="{Binding SelectedDestinationPlace.Name}"
                    FontSize="16"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"/>
            </HorizontalStackLayout>
        </Grid>

        <!-- Picker -->
        <Grid 
            Grid.Row="1"
            ColumnDefinitions="*,*"
            HeightRequest="40"
            BackgroundColor="#E6BE00">
            <HorizontalStackLayout 
                Grid.Column="0" 
                Spacing="5" 
                HorizontalOptions="Center" 
                VerticalOptions="Center">
                <Label 
                    Text="{StaticResource edit}"
                    FontFamily="FAS"
                    FontSize="16"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"/>
                <DatePicker 
                    x:Name="datePicker"
                    Format="dd/MM/yyyy"
                    Date="{Binding SelectedDate}"
                    PropertyChanged="OnDatePickerDateSelected"
                    FontSize="16"
                    BackgroundColor="#E6BE00"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout 
                Grid.Column="1" 
                Spacing="5" 
                HorizontalOptions="Center" 
                VerticalOptions="Center">
                <Label 
                    Text="{StaticResource edit}"
                    FontFamily="FAS"
                    FontSize="16"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"/>
                <TimePicker 
                    x:Name="timePicker"
                    Time="{Binding SelectedTime}"
                    PropertyChanged="OnTimePickerTimeSelected"
                    FontSize="16"
                    BackgroundColor="#E6BE00"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
            </HorizontalStackLayout>
        </Grid>

        <!-- CollectionView: Scrollbar funktioniert jetzt -->
        <CollectionView
            Grid.Row="2"
            ItemsSource="{Binding TravelsList}"
            Margin="0,5,0,5"
            SelectionMode="None"
            HorizontalOptions="Center"
            VerticalOptions="FillAndExpand">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        Margin="5"
                        Padding="5"
                        CornerRadius="5"
                        HorizontalOptions="Fill">

                        <VerticalStackLayout>
                            <HorizontalStackLayout
                                Grid.Column="0"
                                Spacing="5"
                                HorizontalOptions="Start"
                                VerticalOptions="Start">
                                <Label 
                                    Text="{StaticResource clock}"
                                    Margin="0,0,15,0"
                                    FontFamily="FAS"
                                    FontSize="16"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Start"/>
                                <Label
                                    Text="{Binding DepatureTimeDisplay}"
                                    FontSize="15"
                                    FontAttributes="Bold"
                                    HorizontalOptions="Start" />
                                <Label
                                    Text=" ─ "
                                    FontSize="15"
                                    FontAttributes="Bold"
                                    HorizontalOptions="Start" />
                                <Label
                                    Text="{Binding ArrivalTimeDisplay}"
                                    Margin="0,0,15,0"
                                    FontSize="15"
                                    FontAttributes="Bold"
                                    HorizontalOptions="Start" />
                                <Label
                                    Text="{Binding TimeNote}"
                                    FontSize="13"
                                    TextColor="Green"
                                    FontAttributes="Bold"
                                    HorizontalOptions="Start" />
                            </HorizontalStackLayout>

                            <HorizontalStackLayout
                                Grid.Column="1"
                                Spacing="5"
                                Margin="0,10,0,0"
                                HorizontalOptions="Start"
                                VerticalOptions="Start">
                                <Label 
                                    Text="{StaticResource info}"
                                    Margin="0,0,15,0"
                                    FontFamily="FAS"
                                    FontSize="16"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Start"/>
                                <Label
                                    Text="{Binding DurationDisplay}"
                                    Margin="0,0,15,0"
                                    FontSize="15"
                                    FontAttributes="Bold"
                                    HorizontalOptions="Start" />
                                <Label
                                    Text=" | "
                                    FontSize="15"
                                    FontAttributes="Bold"
                                    HorizontalOptions="Start" />
                                <Label
                                    Text="{Binding StopsDisplay}"
                                    FontSize="15"
                                    FontAttributes="Bold"
                                    HorizontalOptions="Start" />
                            </HorizontalStackLayout>

                            <HorizontalStackLayout
                                Grid.Column="2"
                                Spacing="5"
                                Margin="0,10,0,0"
                                HorizontalOptions="Start"
                                VerticalOptions="Start">
                                <Label 
                                    Text="{StaticResource bus}"
                                    Margin="0,0,15,0"
                                    FontFamily="FAS"
                                    FontSize="16"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Start"/>
                                <Label
                                    Text="{Binding NameDisplay}"
                                    FontSize="15"
                                    FontAttributes="Bold"
                                    HorizontalOptions="Start" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Loading Overlay -->
        <Grid 
            BackgroundColor="#80000000"
            IsVisible="{Binding IsLoading}"
            InputTransparent="False"
            VerticalOptions="Fill"
            HorizontalOptions="Fill"
            ZIndex="999">
            <ActivityIndicator  
                IsVisible="True"
                IsRunning="True"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Color="Gold"
                WidthRequest="100"
                HeightRequest="100"
                ZIndex="999" />
        </Grid>
    </Grid>
</ContentPage>